# File managed by puppet

<% ssh_aliases.each do |alias_and_options| %>
Host <%= alias_and_options[0] %>
    Hostname <%- alias_and_options[1].["hostname"] -%>
    User <%- alias_and_options[1].["user"] -%>
    IdentityFile <%- alias_and_options[1].["file"] -%>
    IdentitiesOnly yes
<% end %>

Host github.com
        Hostname github.com
        User git
        IdentityFile ~/.ssh/devops@big-bang
        IdentitiesOnly yes
